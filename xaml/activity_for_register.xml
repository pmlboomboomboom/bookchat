<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#66CCFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新的用户"
        android:id="@+id/textView"
        android:textSize="32dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="用户名:"
        android:id="@+id/textView2"
        android:layout_marginTop="71dp"
        android:gravity="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="密码:"
        android:id="@+id/textView3"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="再次确认:"
        android:id="@+id/textView5"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:gravity="center" />

    <com.example.saber.bookchat.ViewComponent.standrandUserNameInputEditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/user"
        android:background="@layout/corner1"
        android:layout_above="@+id/textView3"
        android:hint="数字与字母组合,6-12长度!"
        android:textSize="14dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:padding="5dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:background="@layout/corner1"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/user"
        android:layout_alignStart="@+id/user"
        android:layout_alignRight="@+id/user"
        android:layout_alignEnd="@+id/user"
        android:hint="数字与字母组合6-10长度!"
        android:textSize="14dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:padding="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password2"
        android:background="@layout/corner1"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_alignRight="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:hint="数字与字母组合6-10长度!"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="14dp"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:text="提交"
        android:id="@+id/registerButton"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/password2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="@layout/corner3"
        android:enabled="true"
        android:clickable="true" />


</RelativeLayout>
