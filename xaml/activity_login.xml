<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:clickable="false"
    android:longClickable="false"
    android:background="@mipmap/login_background"
    android:padding="2dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/logInTitle"
        android:layout_marginTop="131dp"
        android:textStyle="bold"
        android:textSize="32dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userName"
        android:textColor="#FFFFFF"
        android:hint="请输入你的用户名！"
        android:layout_below="@+id/logInTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:autoText="false"
        android:gravity="left|center"
        android:background="@layout/corner1"
        android:textColorHint="#FFFFFF"
        android:textSize="12dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/userPassword"
        android:background="@layout/corner1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/userName"
        android:layout_alignStart="@+id/userName"
        android:hint="请输入你的密码！"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/logInButton"
        android:layout_marginTop="28dp"
        android:background="@layout/corner2"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@+id/userPassword"
        android:layout_alignLeft="@+id/userPassword"
        android:layout_alignStart="@+id/userPassword"
        android:layout_alignRight="@+id/userPassword"
        android:layout_alignEnd="@+id/userPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册新用户"
        android:id="@+id/registerText"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/logInButton"
        android:layout_toLeftOf="@+id/logInTitle"
        android:layout_toStartOf="@+id/logInTitle"
        android:textColor="#FFFFFF"
        android:enabled="false"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:id="@+id/recoveryPassowrdText"
        android:layout_alignTop="@+id/registerText"
        android:layout_toRightOf="@+id/logInTitle"
        android:layout_toEndOf="@+id/logInTitle"
        android:textColor="#FFFFFF"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/registerText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
