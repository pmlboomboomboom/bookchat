<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#66CCFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:id="@+id/titleLogIn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:textSize="48dp"
        android:textColorHint="#FFFFFF"
        android:hint="登录"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:background="@layout/corner3"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <com.example.saber.bookchat.ViewComponent.clearInputEditText
            android:layout_width="280dp"
            android:layout_height="42dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextUserName"
            android:drawableLeft="@mipmap/user_ic"
            android:background="#00000000"
            android:gravity="left|center"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="请输入用户名 " />

        <ImageView
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:id="@+id/imageViewList"
            android:src="@mipmap/list_ic"
            android:clickable="true"
            android:background="#00000000" />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:drawableLeft="@mipmap/password_ic"
        android:background="@layout/corner3"
        android:textSize="18dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:hint="请输入密码 "
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <Button
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:text="登录"
        android:id="@+id/buttonLogIn"
        android:layout_marginTop="18dp"
        android:background="@layout/corner3"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignLeft="@+id/editTextPassword"
        android:layout_alignStart="@+id/editTextPassword"
        android:layout_alignRight="@+id/editTextPassword"
        android:layout_alignEnd="@+id/editTextPassword"
        android:textSize="24dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="|"
        android:id="@+id/textViewSeperate"
        android:layout_below="@+id/buttonLogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="注册新用户"
        android:id="@+id/textViewNewUser"
        android:gravity="center|right"
        android:layout_alignTop="@+id/textViewSeperate"
        android:layout_toLeftOf="@+id/textViewSeperate"
        android:layout_toStartOf="@+id/textViewSeperate"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="找回密码"
        android:id="@+id/textViewFindPassword"
        android:layout_alignTop="@+id/textViewSeperate"
        android:layout_toRightOf="@+id/textViewSeperate"
        android:layout_toEndOf="@+id/textViewSeperate"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:clickable="true" />


</RelativeLayout>
